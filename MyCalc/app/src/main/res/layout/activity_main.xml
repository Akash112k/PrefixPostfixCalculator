<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Infix Convert"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:id="@+id/button24"
        android:hapticFeedbackEnabled="true"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button23"
        app:layout_constraintRight_toRightOf="@+id/postfixcalc"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="6dp"
        app:layout_constraintLeft_toLeftOf="@+id/postfixcalc" />

    <Button
        android:text="Prefix Convert"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:id="@+id/button23"
        android:hapticFeedbackEnabled="true"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button21"
        app:layout_constraintRight_toRightOf="@+id/button24"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="6dp"
        app:layout_constraintLeft_toLeftOf="@+id/button24" />

    <Button
        android:text="Postfix Convert"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:id="@+id/button21"
        android:hapticFeedbackEnabled="true"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/button23"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="37dp"
        app:layout_constraintLeft_toLeftOf="@+id/button23" />

    <TextView
        android:text="@string/main_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="?attr/colorPrimaryDark"
        android:hapticFeedbackEnabled="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Prefix Calculator"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:id="@+id/prefixcalc"
        android:hapticFeedbackEnabled="true"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/postfixcalc"
        app:layout_constraintRight_toRightOf="@+id/infix"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/infix" />

    <Button
        android:text="Postfix Calculator"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:id="@+id/postfixcalc"
        android:hapticFeedbackEnabled="true"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button24"
        app:layout_constraintRight_toRightOf="@+id/prefixcalc"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/prefixcalc" />

    <Button
        android:text="Infix Calculator"
        android:layout_width="0dp"
        android:hapticFeedbackEnabled="true"
        android:layout_height="60dp"
        android:id="@+id/infix"
        android:elevation="0dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/prefixcalc"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>